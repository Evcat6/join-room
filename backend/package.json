{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "lint:type": "npx tsc --noEmit",
    "lint:js": "npx eslint \"src/**/*.ts\"",
    "lint": "npm run lint:type && npm run lint:js",
    "migrate:dev": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:latest",
    "migrate:dev:make": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:make -x ts",
    "migrate:dev:down": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:down",
    "migrate:dev:rollback": "node --loader ts-paths-esm-loader ../node_modules/knex/bin/cli.js migrate:rollback --all",
    "start:dev": "nodemon --exec node --loader ts-paths-esm-loader ./src/server.ts",
    "build": "tsc"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "9.0.2",
    "@types/method-override": "0.0.32",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.0.0",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "body-parser": "^1.20.2",
    "express": "^4.18.2",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "ts-paths-esm-loader": "^1.4.1",
    "typescript": "5.1.3"
  },
  "dependencies": {
    "@types/convict": "^6.1.1",
    "bcrypt": "5.1.0",
    "convict": "^6.2.4",
    "cors": "2.8.5",
    "dotenv": "^16.0.3",
    "jsonwebtoken": "9.0.0",
    "knex": "^2.4.2",
    "method-override": "3.0.0",
    "morgan": "^1.10.0",
    "objection": "^3.0.1",
    "pg": "^8.10.0",
    "socket.io": "4.7.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^4.6.2",
    "winston": "^3.8.2"
  }
}
